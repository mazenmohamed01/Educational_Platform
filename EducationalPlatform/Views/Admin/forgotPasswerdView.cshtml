
@{
    Layout = "_HomeLayout";
    ViewData["Title"] = "forgotPasswerdView";
}


    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Password Recovery</h3></div>
                                <div class="card-body">
                                    <div class="small mb-3 text-muted">Enter your Phone and we will send you a link to reset your password.</div>
                                    <form method="post" action="/checkPhone/">
                                        <div class="form-floating mb-3">
                                            <input class="form-control" name="Phone" id="Phone" type="text" />
                                            <label for="Phone">Phone</label>
                                        </div>
                                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <a class="small" href="/loginView/">Return to login</a>
                                            <input class="btn btn-primary" type="submit" value="Reset Password"></input>
                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small"><a href="/CreateViewStudent/">Need an account? Sign up!</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
       


