@model Course
@{
    if (ViewBag.view == "admin")
    {
        Layout = "_MyLayout";
    }
    else if (ViewBag.view == "instructor")
        Layout = "_InstructorLayout";
    else
        Layout = "_HomeLayout";
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Create Course - SB Admin</title>
    <link href="/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body>

<style>
       img{
           width: 440px;
       }
        #mytable td, th {
            background: #eee;
            padding: 14px;
            margin: 9px;
            border: solid;
        }

        #mytable {
            caption-side: bottom;
            border-collapse: collapse;
            width: 100%;
        }
        .col-lg-7{
            flex: 0 0 auto;
            width: 89.333333%;
        }

        

</style>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Course Details</h3></div>
                    <div class="card-body">

                        
                        <p><strong>Course Name : </strong>@Model.CourseName</p>

                            <div class="form-floating mb-3">

                                <img src="/Images/@Model.Image">
                                <label for="">Course Image</label>
                            </div>
                           
                        <p><strong>Course Description : </strong>@Model.Description</p>

                        <p><strong>Course Price : </strong>$@Model.Price </p>
                            <p><strong>Course Level : </strong>@Model.Level </p>
                            
                        <p><strong>Course Requirements : </strong>@Model.Requirements</p>

                        <p><strong>Course Content : </strong>@Model.Content</p>
                        <p><strong> Number of views : </strong>@ViewBag.student_number</p>

                        <p><strong>Category : </strong>@ViewBag.catg</p>
                            <p><strong>Instructor : </strong>@ViewBag.inst</p>
                        
   
                        
                    </div>
                </div>
            </div>
        </div>
    </div>

 
    
   
</body>
</html>

@if (ViewBag.view == "instructor")
{
    @section Profile {
    <li><a class="dropdown-item" href="/Instructor/Home/@ViewBag.id">Home</a></li>
    <li><a class="dropdown-item" href="/Instructor/MyProfile/@ViewBag.id">Profile</a></li>
    }
}

